generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id          Int          @id @default(autoincrement())
  price       Int
  location    String
  description String?
  userId      Int
  createdAt   DateTime     @default(now())
  updatedAt   DateTime
  endDate     DateTime
  startDate   DateTime
  status      Boolean?
  Applicants  Applicants[]
  user        User         @relation(fields: [userId], references: [id])
}

model User {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  hashedPassword String
  createdAt      DateTime @default(now())
  updatedAt      DateTime
  nickName       String?
  Chat           Chat[]
  Job            Job[]
}

model Chat {
  id        Int      @id @default(autoincrement())
  roomNum   Int
  text      String
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime
  User      User     @relation(fields: [userId], references: [id])
}

model Applicants {
  id        Int      @id @default(autoincrement())
  userId    Int
  jobId     Int
  status    Boolean?
  createdAt DateTime @default(now())
  updatedAt DateTime
  Job       Job      @relation(fields: [jobId], references: [id])
}
